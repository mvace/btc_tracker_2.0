# --- App settings ---
APP_ENV=development
LOG_LEVEL=info
PORT=8001

# --- Database (individual vars) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=portfolio_db
POSTGRES_DB_TEST=portfolio_db_test
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- Combined URL (used by SQLAlchemy) ---
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
DATABASE_URL_TEST=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB_TEST}


# --- External services ---
PRICE_SERVICE_BASE_URL=http://localhost:8000

# --- Security / Auth ---
SECRET_KEY=change-this-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MIN=15
REFRESH_TOKEN_EXPIRES_DAYS=7
