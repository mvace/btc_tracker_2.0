{
  "services": {
    "btc_price_service": {
      "start": "uvicorn price_service.app.main:app --host 0.0.0.0 --port 8000",
      "rootDirectory": "services",
      "dockerfilePath": "services/Dockerfile",
      "envVars": {
        "PORT": {
          "value": "8000"
        }
      }
    },
    "btc_price_updater": {
      "start": "python -m price_service.scripts.update_api_data",
      "rootDirectory": "services",
      "dockerfilePath": "services/Dockerfile",
      "cronSchedule": "1 * * * *"
    }
  }
}
